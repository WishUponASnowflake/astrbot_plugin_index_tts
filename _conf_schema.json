{
    "if_remove_think_tag": {
        "description": "是否去除<think></think>",
        "type": "bool",
        "hint": "因为思考模型会以<think>...</think>的形式输出思考过程，会影响语音合成，如果不是使用思考模型可忽略",
        "obvious_hint": true
    },
    "if_reduce_parenthesis": {
        "description": "是否提醒llm减少括号中内容生成",
        "type": "bool",
        "hint": "有些人格设置会影响该设置生效，请酌情使用"
    },
    "if_remove_emoji": {
        "description": "是否去除句子里的表情(emoji)",
        "type": "bool"
    },
    "if_split_text": {
        "description": "是否分割句子",
        "type": "bool"
    },
    "use_fp16": {
        "description": "是否使用fp16精度",
        "type": "bool",
        "default": false
    },
    "use_cuda_kernel": {
        "description": "是否使用cuda内核",
        "type": "bool",
        "default": false
    },
    "use_deepspeed": {
        "description": "是否使用deepspeed加速",
        "type": "bool",
        "default": false
    },
    "use_emo_text": {
        "description": "是否使用情感文本",
        "type": "bool",
        "default": false
    },
    "use_random": {
        "description": "是否使用随机",
        "type": "bool",
        "default": false
    },
    "verbose": {
        "description": "是否输出详细日志",
        "type": "bool",
        "default": false
    },
    "generation":{
        "description": "配置",
        "type": "object",
        "items": {
            "prompt_wav":{
                "description": "源音频文件",
                "type": "string",
                "hint": "源语音",
                "default": "prompt_白芷.wav"
            },
            "emo_alpha": {
                "description": "情感alpha参数",
                "type": "float",
                "default": 1.0
            },
            "interval_silence": {
                "description": "静音间隔",
                "type": "int",
                "default": 120
            },
            "emo_audio_prompt": {
                "description": "情感音频提示",
                "type": "string",
                "default": ""
            },
            "emo_text": {
                "description": "情感文本",
                "type": "string",
                "default": ""
            },
            "emo_vector": {
                "description": "情感向量",
                "type": "list",
                "default": [0, 0, 0, 0, 0, 0, 0, 0]
            },
            "model_ver":{
                "description": "模型版本",
                "type": "string",
                "options": ["1","1.5","2"],
                "hint": "模型版本，默认为IndexTTS-1.5版本",
                "default": "1.5"
            },
            "if_preload":{
                "description": "是否预加载模型",
                "type": "bool",
                "default": false
            },
            "max_text_tokens_per_sentence":{
                "description": "每个句子最多的Token数",
                "type": "int",
                "default": 100
            },
            "if_random_tts":{
                "description": "是否开启随机TTS回复",
                "type": "bool",
                "default": false
            },
            "random_factor":{
                "description": "随机因子",
                "hint": "随机因子越大，事件概率越大，也就越容易触发",
                "type": "float",
                "default": 0.3
            }
        }
    },
    "serve_config":{
        "description": "服务器设置",
        "type": "object",
        "items": {
            "server_ip":{
                "description": "服务器地址",
                "type": "string",
                "hint": "若为本机使用则不需要更改,即127.0.0.1",
                "default": "127.0.0.1"
            },
            "if_seperate_serve": {
                "description": "是否使用分布式部署",
                "type": "bool",
                "hint": "开启此选项后，本插件就不会自己启动service.py了，且按照服务器地址去访问api",
                "default": false
            },
            "CORRECT_API_KEY": {
                "description": "api密钥",
                "type": "string",
                "hint": "自定义的api密钥，用于验证请求",
                "default": "1145141919810"
            }
        }
    }
}